<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">
<log4j:configuration
    xmlns:log4j="http://jakarta.apache.org/log4j/"
    debug="false">

    <appender name="console" class="org.apache.log4j.ConsoleAppender">
        <layout class="org.apache.log4j.PatternLayout">
        	<!-- param name="ConversionPattern" value="%d %5p [%c] %m%n" /-->
            <param name="ConversionPattern" value="%d %5p [%c] %m%n" />
        </layout>
    </appender>

    <logger name="java.sql" additivity="false">
    	<level value="INFO"/>
        <appender-ref ref="console"/>
    </logger>

    <logger name="egovframework" additivity="false">
        <level value="INFO"/>
        <appender-ref ref="console"/>
    </logger>
    
    <logger name="mngwserc" additivity="false">
        <level value="INFO"/>
        <appender-ref ref="console"/>
    </logger>

	<!-- log SQL with timing information, post execution -->
	<logger name="jdbc.sqltiming" additivity="false">
		<level value="INFO" />
		<appender-ref ref="console" />
	</logger>
	<logger name="jdbc.sqlonly" additivity="false">
		<level value="OFF" />
		<appender-ref ref="console" />
	</logger>	
	<logger name="jdbc.audit" additivity="false">
		<level value="OFF" />
		<appender-ref ref="console" />
	</logger>	
	<logger name="jdbc.resultset" additivity="false">
		<level value="OFF" />
		<appender-ref ref="console" />
	</logger>
	<logger name="jdbc.resultsettable" additivity="false">
		<level value="OFF" />
		<appender-ref ref="console" />
	</logger>

	<logger name="org.springframework" additivity="false">
        <level value="ERROR" />
        <appender-ref ref="console" />
    </logger>
    
    <!-- controlling scope -->
    <logger name="org.springframework.web.servlet.DispatcherServlet" additivity="false">
        <level value="ERROR" />
        <appender-ref ref="console" />
    </logger>
    <logger name="org.springframework.web.context.ContextLoader" additivity="false">
        <level value="ERROR" />
        <appender-ref ref="console" />
    </logger>
    
    <!-- Apache Commoms -->
    <logger name="org.apache.commons" additivity="false">
        <level value="ERROR" />
        <appender-ref ref="console" />
    </logger>
    
    <!-- Apache log4j -->
    <logger name="org.apache.log4j" additivity="false">
        <level value="ERROR" />
        <appender-ref ref="console" />
    </logger>
    
    <!-- ToBeSoft -->
    <logger name="com.tobesoft.xplatform" additivity="false">
        <level value="ERROR" />
        <appender-ref ref="console" />
    </logger>
    
    <!-- Egov -->
    <logger name="egovframework.rte" additivity="false">
        <level value="ERROR" />
        <appender-ref ref="console" />
    </logger>

	<root>
		<level value="INFO" />
		<appender-ref ref="console" />
	</root>

</log4j:configuration>