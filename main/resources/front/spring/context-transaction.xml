<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:aop="http://www.springframework.org/schema/aop"
	xmlns:tx="http://www.springframework.org/schema/tx"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
	http://www.springframework.org/schema/tx http://www.springframework.org/schema/tx/spring-tx-3.0.xsd
	http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop-3.0.xsd">

	<!-- 트렌젝션 매니저 설정 -->
	<bean id="txManager" class="org.springframework.jdbc.datasource.DataSourceTransactionManager">
		<property name="dataSource" ref="egov.dataSource" />
	</bean>
	
	<!-- 
	<bean id="outTxManager" class="org.springframework.jdbc.datasource.DataSourceTransactionManager">
		<property name="dataSource" ref="egov.outDataSource" />
	</bean>
	
	<bean id="smsTxManager" class="org.springframework.jdbc.datasource.DataSourceTransactionManager">
		<property name="dataSource" ref="egov.smsDataSource" />
	</bean>
	-->

	<!-- 트렌젝션 매니저 설정 method name에 접두어 insert, delete, update 인 메소드에서, rollback-for UnknownErrorException 일때 처리-->	  
	<tx:advice id="txAdvice" transaction-manager="txManager">
		<tx:attributes>	 
	   		<tx:method name="insert*" propagation="REQUIRED" rollback-for="Exception" />
	   		<tx:method name="update*" propagation="REQUIRED" rollback-for="Exception" />
	   		<tx:method name="delete*" propagation="REQUIRED" rollback-for="Exception" />
	   	</tx:attributes>
	</tx:advice>
	
	<!-- 
	<tx:advice id="outTxAdvice" transaction-manager="outTxManager">
		<tx:attributes>	 
	   		<tx:method name="insert*" propagation="REQUIRED" rollback-for="Exception" />
	   		<tx:method name="update*" propagation="REQUIRED" rollback-for="Exception" />
	   		<tx:method name="delete*" propagation="REQUIRED" rollback-for="Exception" />
	   	</tx:attributes>
	</tx:advice>
	
	<tx:advice id="smsTxAdvice" transaction-manager="smsTxManager">
		<tx:attributes>	 
	   		<tx:method name="insert*" propagation="REQUIRED" rollback-for="Exception" />
	   		<tx:method name="update*" propagation="REQUIRED" rollback-for="Exception" />
	   		<tx:method name="delete*" propagation="REQUIRED" rollback-for="Exception" />
	   	</tx:attributes>
	</tx:advice>
    -->
    <!-- aop 설정 부분 해당 트렌젝션을 거는 부분 mngserc.com..*impl.*(..)) < 요거 정확한 의미는 추후에 다시 공유 or 로 다수 설정 가능 -->
	<aop:config>
		<aop:pointcut id="txRequired" expression="execution(* egovframework.com..*Impl.*(..)) or execution(* front..*Impl.*(..))" />
		<aop:advisor advice-ref="txAdvice" pointcut-ref="txRequired" />
		<!-- 
		<aop:advisor advice-ref="outTxAdvice" pointcut-ref="txRequired" />
		<aop:advisor advice-ref="smsTxAdvice" pointcut-ref="txRequired" />
		-->
	</aop:config>
	
</beans>